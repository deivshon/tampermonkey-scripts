{
    "compilerOptions": {
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./*"]
        },
        "rootDir": "./src"
    },
    "include": ["./**/*.js"],
    "exclude": ["node_modules"]
}
