{
    "compilerOptions": {
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./*"]
        },
        "rootDir": "./src"
    },
    "include": ["./**/*.js"],
    "exclude": ["node_modules"]
}
